{
  "name": "hexa_keeper",
  "version": "1.1.10",
  "private": true,
  "scripts": {
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install && chmod +x setup.sh && sh ./setup.sh",
    "postinstall": "patch-package",
    "androidDevelopmentDebug": "ENVFILE=.env react-native run-android --variant=developmentDebug --appIdSuffix=development",
    "androidDevelopmentRelease": "ENVFILE=.env react-native run-android --variant=developmentRelease --appIdSuffix=development",
    "androidProductionDebug": "ENVFILE=.env react-native run-android --variant=productionDebug",
    "androidProductionRelease": "ENVFILE=.env react-native run-android --variant=productionRelease",
    "uninstall ios": "xcrun simctl uninstall booted io.hexawallet.keeper",
    "uninstall ios:dev": "xcrun simctl uninstall booted io.hexawallet.hexakeeper.dev",
    "uninstall android": "adb uninstall io.hexawallet.bitcoinkeeper",
    "uninstall android:dev": "adb uninstall io.hexawallet.keeper.development",
    "release android dev": "chmod +x ./update-config.sh && ./update-config.sh dev && cd android && ENVFILE=.env bundle exec fastlane dev --env dev",
    "release android prod": "chmod +x ./update-config.sh && ./update-config.sh production && cd android && ENVFILE=.env.production bundle exec fastlane live --env production",
    "release ios dev": "chmod +x ./update-config.sh && ./update-config.sh dev && cd ios && ENVFILE=.env bundle exec fastlane dev --env dev",
    "release ios prod": "chmod +x ./update-config.sh && ./update-config.sh production && cd ios && ENVFILE=.env.production bundle exec fastlane live --env production"
  },
